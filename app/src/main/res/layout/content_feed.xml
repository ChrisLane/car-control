<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/car_location"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        card_view:cardCornerRadius="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/car_loc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Location"
            android:textAlignment="center"
            android:textSize="24sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/software_update"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        card_view:cardCornerRadius="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sotware_update_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Software Update v1.2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/button3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="57dp"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:text="Update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:id="@+id/button3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="23dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view_camera"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        card_view:cardCornerRadius="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/media_now_playing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/media_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Phil Collins - In the air tonight"
                android:layout_below="@+id/media_now_playing"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    card_view:srcCompat="@drawable/ic_fast_rewind_black_24dp"
                    android:layout_below="@+id/media_song"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="42dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    card_view:srcCompat="@drawable/ic_pause_black_24dp"
                    android:layout_below="@+id/media_song"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    card_view:srcCompat="@drawable/ic_fast_forward_black_24dp"
                    android:layout_below="@+id/media_song"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="45dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>